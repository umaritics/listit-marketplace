<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="@color/orange" />  <!-- orange -->

    <!-- Rounded corners -->
    <corners android:radius="18dp" />

    <!-- Optional padding so content doesn't touch the border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
