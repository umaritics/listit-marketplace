<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".MyAds">

    <!-- Main Content Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Ads"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF6F00" />

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ADS"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tabFav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FAVOURITES"
                android:gravity="center"
                android:textColor="#9E9E9E"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Orange indicator line -->
        <View
            android:id="@+id/indicator"
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:layout_below="@id/tabLayout"
            android:layout_marginTop="2dp"
            android:background="#FF6F00" />

        <!-- RECYCLER VIEW (Replaces the ScrollView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/indicator"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:paddingBottom="10dp" />

    </RelativeLayout>

    <!-- Bottom Nav -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home" />
        </LinearLayout>

        <!-- Chat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/chat_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Chat"
                android:src="@drawable/ic_chat" />
        </LinearLayout>

        <!-- Add -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/add_ic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Add"
                android:src="@drawable/ic_add_circle" />
        </LinearLayout>

        <!-- Favorite -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fav_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Favorite"
                android:src="@drawable/ic_favorite" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/prof_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>