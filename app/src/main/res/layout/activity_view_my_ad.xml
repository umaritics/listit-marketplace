<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ViewMyAd">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/ad_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Main Property Image -->
            <ImageView
                android:id="@+id/property_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/apt_placeholder"
                android:background="@drawable/rounded_corners" />

            <!-- Favorite (heart) icon -->
            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/property_image"
                android:layout_margin="10dp"
                android:src="@drawable/ic_back_white"
                android:background="@drawable/white_circle_bg"
                android:padding="6dp" />

            <!-- Camera + photo count overlay -->
            <LinearLayout
                android:id="@+id/photo_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/property_image"
                android:layout_alignEnd="@id/property_image"
                android:layout_margin="8dp"
                android:background="@drawable/dark_round_bg"
                android:orientation="horizontal"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_camera_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/3"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Price -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/property_details"
                android:layout_below="@id/property_image"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/info"
                    android:padding="8dp"
                    android:background="@drawable/details_box_bg2"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- Views -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_views"
                            android:contentDescription="Views icon" />

                        <TextView
                            android:text="Views"
                            android:textSize="10sp"
                            android:textColor="#F97316"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="216"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#F97316" />
                    </LinearLayout>

                    <!-- Chats -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chat_black"
                            android:contentDescription="Chats icon" />

                        <TextView
                            android:text="Chats"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="#F97316"/>

                        <TextView
                            android:text="37"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#F97316" />
                    </LinearLayout>

                    <!-- Leads -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_leads"
                            android:contentDescription="Leads icon" />

                        <TextView
                            android:text="Leads"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#F97316"/>

                        <TextView
                            android:text="21"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#F97316" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_below="@+id/info"
                    android:id="@+id/property_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:text="Rs 65,000"
                    android:textColor="#FF6F00"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Title -->
                <ImageView
                    android:id="@+id/loc_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/property_title"
                    android:src="@drawable/icon_location"
                    android:padding="6dp" />
                <TextView
                    android:id="@+id/property_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/property_price"
                    android:layout_marginTop="2dp"
                    android:text="Flat at PHA  -  G11/4 D-type, Block D-9"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
                <TextView
                    android:id="@+id/property_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/property_title"
                    android:layout_toEndOf="@id/loc_icon"
                    android:layout_marginTop="5dp"
                    android:text="G11 |Sector 1 |Islamabad"
                    android:textColor="#827A7A"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/property_loc"
                    android:layout_marginEnd="2dp"
                    android:text="11/5/25"
                    android:textColor="#827A7A"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
                <ImageView
                    android:id="@+id/fav_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignTop="@id/property_price"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_favorite"
                    android:padding="6dp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/details_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/property_details"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/details_box_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Description Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#FF6F00"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2x Bedrooms\n2x Bathrooms\n1x Kitchen\n1x Store Room\n1x Balcony"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp" />

                <!-- Details Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textColor="#FF6F00"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Table Layout for Condition and Category -->
                <RelativeLayout
                    android:id="@+id/details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/details_box_bg"
                    android:paddingVertical="4dp">

                    <!-- Condition Row -->
                    <TextView
                        android:id="@+id/condition_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textStyle="bold"
                        android:textColor="#FF6F00"
                        android:padding="8dp"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/condition_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textColor="#000000"
                        android:padding="8dp"
                        android:layout_alignBaseline="@id/condition_label"
                        android:layout_alignParentEnd="true" />

                    <!-- Divider Line -->
                    <View
                        android:id="@+id/divider_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/condition_label"
                        android:background="#E0E0E0" />

                    <!-- Category Row -->
                    <TextView
                        android:id="@+id/category_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textStyle="bold"
                        android:textColor="#FF6F00"
                        android:padding="8dp"
                        android:layout_below="@id/divider_line"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/category_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apartments"
                        android:textColor="#000000"
                        android:padding="8dp"
                        android:layout_alignBaseline="@id/category_label"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>
            <!-- Posted By Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_box"
                android:padding="12dp"
                android:layout_alignParentBottom="true"
                >


                <!-- Call & Chat Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"

                    android:gravity="center"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Remove"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:textColor="#FF6F00"
                        android:textStyle="bold"
                        app:strokeColor="#FF6F00"
                        app:strokeWidth="2dp"
                        app:cornerRadius="5dp"
                        android:backgroundTint="#FFFFFF" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_chat"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Repost"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:strokeColor="#FF6F00"
                        app:strokeWidth="2dp"
                        app:cornerRadius="5dp"
                        android:backgroundTint="#FF6F00" />

                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
