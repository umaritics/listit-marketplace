<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topPanel">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_margin="-15dp"
                android:id="@+id/signup1"
                android:src="@drawable/signup1">

            </ImageView>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:adjustViewBounds="true"
                android:id="@+id/signup2"
                android:src="@drawable/signup2">

            </ImageView>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_input"
            android:layout_below="@id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="40dp"
            android:hint="@string/full_name"
            app:startIconDrawable="@drawable/ep_user"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/white"
            app:startIconTint="@color/black"
            android:textColorHint="@color/black"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxStrokeColor="@color/orange"
            app:hintTextColor="@color/orange"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="custom"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textFontWeight="550"
                android:gravity="center"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone"
            android:layout_below="@id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="40dp"
            android:hint="@string/phone_number2"
            app:startIconDrawable="@drawable/group"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/white"
            app:startIconTint="@color/black"
            android:textColorHint="@color/black"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxStrokeColor="@color/orange"
            app:hintTextColor="@color/orange"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="custom"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textFontWeight="550"
                android:gravity="center"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_below="@id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="40dp"
            android:hint="@string/email"
            app:startIconDrawable="@drawable/vector"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/white"
            app:startIconTint="@color/black"
            android:textColorHint="@color/black"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxStrokeColor="@color/orange"
            app:hintTextColor="@color/orange"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="custom"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textFontWeight="550"
                android:gravity="center"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="40dp"
            android:hint="@string/password"
            app:startIconDrawable="@drawable/icon"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/white"
            app:startIconTint="@color/black"
            android:textColorHint="@color/black"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxStrokeColor="@color/orange"
            app:hintTextColor="@color/orange"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="custom"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textFontWeight="550"
                android:gravity="center"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_below="@id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:text="@string/sign_up2"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/orange"
            android:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            android:textSize="18sp"
            android:padding="15dp"
            app:rippleColor="@color/orange" />

        <LinearLayout
            android:id="@+id/alreadyLayout"
            android:layout_below="@id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />
        </LinearLayout>





    </RelativeLayout>


</ScrollView>