<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ViewAd">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/belowInf"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/ad_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- SWIPEABLE IMAGE CONTAINER -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/black" />

                <!-- Back Icon -->
                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@id/viewPagerImageSlider"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_back_white"
                    android:background="@drawable/white_circle_bg"
                    android:padding="6dp" />

                <!-- Photo Counter Overlay -->
                <LinearLayout
                    android:id="@+id/photo_count_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/viewPagerImageSlider"
                    android:layout_alignEnd="@id/viewPagerImageSlider"
                    android:layout_margin="8dp"
                    android:background="@drawable/dark_round_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_camera_white" />

                    <TextView
                        android:id="@+id/photo_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/1"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Price -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/property_details"
                    android:layout_below="@id/viewPagerImageSlider"
                    >
                    <TextView
                        android:id="@+id/property_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="8dp"
                        android:text="Rs 0"
                        android:textColor="#FF6F00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Title -->
                    <ImageView
                        android:id="@+id/loc_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/property_title"
                        android:src="@drawable/icon_location"
                        android:padding="6dp" />
                    <TextView
                        android:id="@+id/property_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/property_price"
                        android:layout_marginTop="2dp"
                        android:text="Loading..."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                    <TextView
                        android:id="@+id/property_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/property_title"
                        android:layout_toEndOf="@id/loc_icon"
                        android:layout_marginTop="5dp"
                        android:text="Location"
                        android:textColor="#827A7A"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/property_loc"
                        android:layout_marginEnd="2dp"
                        android:text="Date"
                        android:textColor="#827A7A"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                    <ImageView
                        android:id="@+id/fav_icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignTop="@id/property_price"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_favorite"
                        android:padding="6dp" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/details_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/property_details"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/details_box_bg"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Description Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#FF6F00"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Details Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textColor="#FF6F00"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Table Layout for Condition and Category -->
                    <RelativeLayout
                        android:id="@+id/details_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/details_box_bg"
                        android:paddingVertical="4dp">

                        <!-- Condition Row -->
                        <TextView
                            android:id="@+id/condition_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condition"
                            android:textStyle="bold"
                            android:textColor="#FF6F00"
                            android:padding="8dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/condition_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="#000000"
                            android:padding="8dp"
                            android:layout_alignBaseline="@id/condition_label"
                            android:layout_alignParentEnd="true" />

                        <!-- Divider Line -->
                        <View
                            android:id="@+id/divider_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/condition_label"
                            android:background="#E0E0E0" />

                        <!-- Category Row -->
                        <TextView
                            android:id="@+id/category_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textStyle="bold"
                            android:textColor="#FF6F00"
                            android:padding="8dp"
                            android:layout_below="@id/divider_line"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/category_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="#000000"
                            android:padding="8dp"
                            android:layout_alignBaseline="@id/category_label"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                </LinearLayout>

                <!-- MAP SECTION -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/map_card"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/details_box"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <org.osmdroid.views.MapView
                        android:id="@+id/map_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Disable Touch Overlay (Optional, improves scrolling) -->
                    <View
                        android:id="@+id/map_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map_card"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Tap map to view directions"
                    android:textSize="12sp"
                    android:textColor="#888888"/>

                <!-- Posted By Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map_card"
                    android:padding="12dp"
                    android:layout_marginTop="20dp"
                    >
                    <LinearLayout
                        android:id="@+id/posted_by_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@drawable/posted_by_bg"
                        android:gravity="center_vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/seller_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile_placeholder"
                            android:layout_marginEnd="10dp"
                            app:shapeAppearanceOverlay="@style/CircularImageView"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Posted By"
                                android:textColor="#6B4B2A"
                                android:textStyle="bold"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/seller_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <!-- Call & Chat Buttons -->

                </RelativeLayout>




            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:id="@+id/belowInf"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_call"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Call"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="#FF6F00"
                android:textStyle="bold"
                app:icon="@drawable/ic_call"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#FF6F00"
                app:strokeColor="#FF6F00"
                app:strokeWidth="2dp"
                app:cornerRadius="5dp"
                android:backgroundTint="#FFFFFF" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Chat"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_chat_black"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:strokeColor="#FF6F00"
                app:strokeWidth="2dp"
                app:cornerRadius="5dp"
                android:backgroundTint="#FF6F00" />

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>