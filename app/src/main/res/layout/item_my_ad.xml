<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Left Image -->
        <ImageView
            android:id="@+id/adImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:background="@color/grey"
            android:layout_centerVertical="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/adTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/adImage"
            android:layout_toStartOf="@id/adStatus"
            android:text="Ad Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <!-- Status (Active/Removed) -->
        <TextView
            android:id="@+id/adStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="#FF6F00"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/adTitle" />

        <!-- Location -->
        <TextView
            android:id="@+id/adLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_below="@id/adTitle"
            android:layout_toEndOf="@id/adImage"
            android:layout_marginTop="2dp" />

        <!-- Price -->
        <TextView
            android:id="@+id/adPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/adLocation"
            android:layout_toEndOf="@id/adImage"
            android:layout_marginTop="4dp" />

        <!-- Button Row -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adPrice"
            android:layout_toEndOf="@id/adImage"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Button 1: Usually "Edit" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/orange"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp" />

            <!-- Button 2: "Remove", "Republish", or "Unfavorite" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="12dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.MaterialComponents.Button"
                app:backgroundTint="@color/orange"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>