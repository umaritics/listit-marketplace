<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OtherAds"
    android:background="#FFFFFF">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public Profile"
            android:textColor="#FF6F00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Profile Card -->
        <RelativeLayout
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHeader"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_orange_bg"
            android:padding="12dp">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                app:shapeAppearanceOverlay="@style/CircularImageView"/>

            <!-- Posted By Label -->
            <TextView
                android:id="@+id/tvPostedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted By"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_toEndOf="@id/imgProfile"
                android:layout_marginStart="8dp"
                android:layout_alignTop="@id/imgProfile" />

            <!-- User Name -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_below="@id/tvPostedBy"
                android:layout_toEndOf="@id/imgProfile"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp" />

            <!-- Published Ads Box -->
            <LinearLayout
                android:id="@+id/adsBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_bg_orange"
                android:padding="6dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published Ads"
                    android:textSize="11sp"
                    android:textColor="#000000"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvAdCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>

        <!-- RECYCLER VIEW (Replaces ScrollView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_other_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profileCard"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:paddingBottom="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home" />
        </LinearLayout>

        <!-- Chat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/chat_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Chat"
                android:src="@drawable/ic_chat" />
        </LinearLayout>

        <!-- Add -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/add_ic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Add"
                android:src="@drawable/ic_add_circle" />
        </LinearLayout>

        <!-- Favorite -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fav_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Favorite"
                android:src="@drawable/ic_favorite" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/prof_ic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>