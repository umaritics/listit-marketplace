<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:padding="20dp">

    <!-- Handle Bar (Visual cue to swipe down) -->
    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:background="#E0E0E0"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Photos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_image_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 images selected"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="20dp"/>

    <!-- The Button to Open System Gallery -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pick_gallery"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Add Photos from Gallery"
        android:backgroundTint="#F5F5F5"
        android:textColor="#000000"
        app:icon="@drawable/ic_add_circle"
        app:iconTint="#FF913C"
        app:cornerRadius="10dp"
        android:layout_marginBottom="20dp"/>

    <!-- The Horizontal List of Selected Images -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Done / Swipe Down"
        android:backgroundTint="#FF913C"
        android:layout_marginTop="10dp"
        app:cornerRadius="10dp"/>

</LinearLayout>